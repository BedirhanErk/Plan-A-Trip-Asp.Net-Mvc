@using Plan_A_Trip.Models.Classes
@model List<Contact>
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Contact Form</h2>
<br />

<table class="table table-bordered">
    <tr>
        <th>Delete</th>
        <th>Name</th>
        <th>Email</th>
        <th>Subject</th>
        <th>Message</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td><a href="/Admin/ContactDelete/@x.Id" class="text-danger" data-toggle="tooltip" data-placement="top" title="Delete"><strong>X</strong></a></td>
            <td>@x.NameSurname</td>
            <td>@x.Email</td>
            <td>@x.Subject</td>
            <td>@x.Message</td>
        </tr>
    }
</table>